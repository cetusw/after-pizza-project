<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Order" table="customer_order">

        <id name="orderId" type="integer" column="order_id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="customerName" column="customer_name" type="string" length="255" />
        <field name="email" column="email" type="string" length="255" />
        <field name="phone" column="phone" type="string" length="255" />
        <field name="address" column="address" type="string" length="255" />
        <field name="comments" column="comments" type="string" length="255" />
        <field name="products" column="products" type="string" length="255" />
        <field name="orderDate" column="order_date" type="date" />
    </entity>

</doctrine-mapping>